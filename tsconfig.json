{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "es6",
    "lib": [
      "es2019",
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "ignoreDeprecations": "5.0",
    // "lib": [
    //   "esnext"
    // ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}